{
	"compilerOptions": {
		"target": "es2017",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "./build",
		"esModuleInterop": true,
		"preserveValueImports": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"incremental": true,
		"baseUrl": "src"
	}
}